<div class="control-group">
    <div class="row-fluid">
        <label class="control-label">Color</label>
        <input class="span" id="color-picker-control" data-jscolor="{format: 'hex'}" data-bind="value: color, event: {input: updateColor, change: saveColor}">
    </div>
	<div class="row-fluid">
		<label class="control-label">White</label>
		<input type="range" min="0" max="100" value="0" class="slider" id="whiteValue" data-bind="value: white, event: {input: updateWhite, change:saveWhite}">
	</div>
    <div class="row-fluid">
        <button class="btn span6" data-bind="enable: !isOn(), click: turnOn">RGB On</button>
        <button class="btn span6" data-bind="enable: isOn(), click: turnOff">RGB Off</button>
    </div>
</div>